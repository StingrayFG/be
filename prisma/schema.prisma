generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model file {
  name              String
  creationDate      DateTime? @db.Timestamptz(3)  @default(dbgenerated("NOW()")) 
  size              Int

  uuid              String    @id
  ownerUuid         String 
  parentUuid        String? 
  driveUuid         String

  removed          Boolean    @default(false)
}

model folder {
  name              String
  creationDate      DateTime? @db.Timestamptz(3)  @default(dbgenerated("NOW()")) 

  uuid              String    @id
  ownerUuid         String 
  parentUuid        String? 
  driveUuid         String

  removed           Boolean    @default(false)
}

model drive {
  uuid              String    @id
  ownerUuid         String

  spaceTotal        Int
  spaceUsed         Int
}


model user {
  uuid              String    
  login             String    @id
  password          String 
}
